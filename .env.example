# Copy this file to .env and fill in your actual values

# Chess Daily limit
DAILY_LIMIT=10

# Your Chess.com username
CHESS_USER=your_chess_username

# TickTick API token (get from TickTick Developer Console)
TICKTICK_ACCESS_TOKEN=your_ticktick_api_token_here
TICKTICK_CLIENT_ID=your_ticktick_client_id_here
TICKTICK_CLIENT_SECRET=your_ticktick_client_secret_here
TICKTICK_PROJECT_ID=your_ticktick_project_id_here

# Optional: Your email for Chess.com API User-Agent
USER_EMAIL=your_email@example.com

# Optional: Action mode (UPDATE or FINAL)
ACTION_MODE=UPDATE

# Optional: Task title to find in TickTick
TASK_TITLE=Daily chess

# Optional: Timezone for date calculations (defaults to UTC)
# Examples: America/Sao_Paulo, America/New_York, Europe/London, etc.
TIMEZONE=UTC
